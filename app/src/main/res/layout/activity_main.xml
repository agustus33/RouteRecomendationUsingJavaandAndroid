<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.routerecomendation.activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="182dp"
        android:layout_height="33dp"
        android:text="Routes"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/searchEdit2"
        app:layout_constraintEnd_toEndOf="@+id/searchEdit2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/searchEdit2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/searchEdit1"
        android:layout_width="299dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="32dp"
        android:hint="From:"
        android:iconifiedByDefault="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <ListView
        android:id="@+id/lv1"
        android:layout_width="298dp"
        android:layout_height="441dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/searchEdit2"
        app:layout_constraintStart_toStartOf="@+id/searchEdit1"
        app:layout_constraintTop_toBottomOf="@id/searchEdit1" />

    <ListView
        android:id="@+id/lv2"
        android:layout_width="299dp"
        android:layout_height="371dp"
        android:layout_below="@+id/searchEdit2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/searchEdit2"
        app:layout_constraintStart_toStartOf="@+id/searchEdit2"
        app:layout_constraintTop_toBottomOf="@+id/searchEdit2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/searchEdit2"
        android:layout_width="299dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="32dp"
        android:hint="To:"
        android:iconifiedByDefault="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <Button
        android:id="@+id/button_find"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:text="Find Routes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchEdit2"
        app:layout_constraintTop_toTopOf="@+id/searchEdit1" />

    <ListView
        android:id="@+id/lv3"
        android:layout_width="417dp"
        android:layout_height="347dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchEdit1" />


</androidx.constraintlayout.widget.ConstraintLayout>